{
   "title": "left_control + h/j/k/l/u/i to arrow keys and home end",
   "rules": [
      {
         "description": "Map left ctrl + h/j/k/l to Arrows",
         "manipulators": [
            {
               "type": "basic",
               "from": {
                  "key_code": "h",
                  "modifiers": {
                     "mandatory": [
                        "left_control"
                     ],
                     "optional": [
                        "any"
                     ]
                  }
               },
               "to": [
                  {
                     "key_code": "left_arrow"
                  }
               ],
               "conditions": [
                  {
                     "type": "frontmost_application_unless",
                     "bundle_identifiers": [
                        "^org\\.vim\\.",
                        "^com.googlecode.iterm2"
                     ]
                  }
               ]
            },
            {
               "type": "basic",
               "from": {
                  "key_code": "j",
                  "modifiers": {
                     "mandatory": [
                        "left_control"
                     ],
                     "optional": [
                        "any"
                     ]
                  }
               },
               "to": [
                  {
                     "key_code": "down_arrow"
                  }
               ],
               "conditions": [
                  {
                     "type": "frontmost_application_unless",
                     "bundle_identifiers": [
                        "^org\\.vim\\.",
                        "^com.googlecode.iterm2"
                     ]
                  }
               ]
            },
            {
               "type": "basic",
               "from": {
                  "key_code": "k",
                  "modifiers": {
                     "mandatory": [
                        "left_control"
                     ],
                     "optional": [
                        "any"
                     ]
                  }
               },
               "to": [
                  {
                     "key_code": "up_arrow"
                  }
               ],
               "conditions": [
                  {
                     "type": "frontmost_application_unless",
                     "bundle_identifiers": [
                        "^org\\.vim\\.",
                        "^com.googlecode.iterm2"
                     ]
                  }
               ]
            },
            {
               "type": "basic",
               "from": {
                  "key_code": "l",
                  "modifiers": {
                     "mandatory": [
                        "left_control"
                     ],
                     "optional": [
                        "any"
                     ]
                  }
               },
               "to": [
                  {
                     "key_code": "right_arrow"
                  }
               ],
               "conditions": [
                  {
                     "type": "frontmost_application_unless",
                     "bundle_identifiers": [
                        "^org\\.vim\\.",
                        "^com.googlecode.iterm2"
                     ]
                  }
               ]
            }
         ]
      },
      {
         "description": "Map left ctrl + u/i to home/end",
         "manipulators": [
            {
               "type": "basic",
               "from": {
                  "key_code": "u",
                  "modifiers": {
                     "mandatory": [
                        "left_control"
                     ],
                     "optional": [
                        "any"
                     ]
                  }
               },
               "to": [
                  {
                     "key_code": "home"
                  }
               ],
               "conditions": [
                  {
                     "type": "frontmost_application_unless",
                     "bundle_identifiers": [
                        "^org\\.vim\\.",
                        "^com.googlecode.iterm2"
                     ]
                  }
               ]
            },
            {
               "type": "basic",
               "from": {
                  "key_code": "i",
                  "modifiers": {
                     "mandatory": [
                        "left_control"
                     ],
                     "optional": [
                        "any"
                     ]
                  }
               },
               "to": [
                  {
                     "key_code": "end"
                  }
               ],
               "conditions": [
                  {
                     "type": "frontmost_application_unless",
                     "bundle_identifiers": [
                        "^org\\.vim\\.",
                        "^com.googlecode.iterm2"
                     ]
                  }
               ]
            }
         ]
      },
      {
         "description": "Map ctrl + comma/period to option + left/right arrows",
         "manipulators": [
            {
               "type": "basic",
               "from": {
                  "key_code": "comma",
                  "modifiers": {
                     "mandatory": [
                        "control"
                     ],
                     "optional": [
                        "any"
                     ]
                  }
               },
               "to": [
                  {
                     "key_code": "left_arrow",
                     "modifiers": [
                        "option"
                     ]
                  }
               ]
            },
            {
               "type": "basic",
               "from": {
                  "key_code": "period",
                  "modifiers": {
                     "mandatory": [
                        "control"
                     ],
                     "optional": [
                        "any"
                     ]
                  }
               },
               "to": [
                  {
                     "key_code": "right_arrow",
                     "modifiers": [
                        "option"
                     ]
                  }
               ]
            }
         ]
      },
      {
         "description": "Map ctrl + e to page_up",
         "manipulators": [
            {
               "type": "basic",
               "from": {
                  "key_code": "e",
                  "modifiers": {
                     "mandatory": [
                        "control"
                     ],
                     "optional": [
                        "any"
                     ]
                  }
               },
               "to": [
                  {
                     "key_code": "page_up"
                  }
               ]
            }
         ]
      },
      {
         "description": "Map ctrl + c to page_down",
         "manipulators": [
            {
               "type": "basic",
               "from": {
                  "key_code": "c",
                  "modifiers": {
                     "mandatory": [
                        "control"
                     ],
                     "optional": [
                        "any"
                     ]
                  }
               },
               "to": [
                  {
                     "key_code": "page_down"
                  }
               ]
            }
         ]
      }
   ]
}
