{
   "title": "Copy/paste bindings",
   "rules": [
      {
         "description": "Map ctrl + left_shift + p to option + command + down (copy line to bottom)",
         "manipulators": [
            {
               "type": "basic",
               "from": {
                  "key_code": "p",
                  "modifiers": {
                     "mandatory": [
                        "control",
                        "left_shift"
                     ],
                     "optional": [
                        "any"
                     ]
                  }
               },
               "to": [
                  {
                     "key_code": "down_arrow",
                     "modifiers": [
                        "option",
                        "command"
                     ]
                  }
               ]
            }
         ]
      }
   ]
}
